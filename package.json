{
  "name": "hillclimbing",
  "version": "1.0.0",
  "description": "A hill climbing algorithm implemented in javascript",
  "main": "src/index.js",
  "homepage": "https://github.com/201flaviosilva/HillClimbing.js#readme",
  "author": "201flaviosilva",
  "license": "MIT",
  "scripts": {
    "clear": "rm -rf docs && rm -rf types && rm -rf build",
    "start:test": "jest --watchAll",
    "test": "jest",
    "types": "npx -p typescript tsc src/index.js --declaration --allowJs --emitDeclarationOnly --outDir build",
    "jsDoc": "jsdoc -c jsdoc.conf.json",
    "compile": "webpack --mode production",
    "build": "npm run clear && npm run compile && npm run jsDoc && npm run types",
    "bump": "np"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/plugin-transform-modules-commonjs": "^7.17.9",
    "babel-loader": "^8.2.5",
    "jest": "^28.1.1",
    "jsdoc": "^3.6.10",
    "np": "^7.6.1",
    "tui-jsdoc-template": "^1.2.2",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "keywords": [
    "AI",
    "Search",
    "Algorithm",
    "Optimization",
    "Optimization Algorithm",
    "Search Algorithm",
    "Artificial Intelligence",
    "Hill Climbing",
    "Hill Climbing Algorithm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/201flaviosilva/HillClimbing.js.git"
  },
  "bugs": {
    "url": "https://github.com/201flaviosilva/HillClimbing.js/issues"
  }
